generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UPLOAD_STATUS {
  PENDING
  COMPLETED
  FAILED
}

model User {
  id      String   @id @default(uuid())
  clerkId String   @unique
  email   String   @unique
  name    String?
  resumes Resume[]
}

model Resume {
  id        String        @id @default(uuid())
  user      User          @relation(fields: [userId], references: [id])
  userId    String
  filename  String
  filetype  String
  s3Key     String
  uploaded  UPLOAD_STATUS @default(PENDING)
  createdAt DateTime      @default(now())
}
